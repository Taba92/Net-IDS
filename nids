cd "PathToClonedRepo"
case $1 in
  start)
    CMD=$(./nidsManager start)
    if [[ "$CMD" == "FALSE" ]]; then
      echo "NIDS ATTIVO"
    else
        ERL_FLAGS=" -args_file vm.args " rebar3 shell
    fi
    ;;
  stop)
    CMD=$(./nidsManager stop)
    if [[ "$CMD" == "FALSE" ]]; then
      echo "NIDS ATTIVO"
    fi
    ;;
  opt)
    CMD=$(./nidsManager opt)
    if [[ "$CMD" == "FALSE" ]]; then
      echo "ERRORE: NIDS NON ATTIVO O PROCESSO HANDLER NON PRESENTE SUL NIDS"
    fi
    ;;
  config)
    ./nidsManager stop
    ./nidsManager config $2 $3
    ./nidsManager start
    ;;
  *)
  echo -n " COMMAND SEQUENCE UNKNOWN"
esac